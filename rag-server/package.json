{
  "name": "bbj-rag-server",
  "version": "1.0.0",
  "description": "Centralized RAG server for BBj documentation and code examples",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "watch": "tsc -w",
    "cli": "node dist/cli.js",
    "init-db": "node dist/cli.js db stats",
    "docker:build": "docker build -t bbj-rag-server .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data bbj-rag-server"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "commander": "^11.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
