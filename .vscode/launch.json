// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/bbj-vscode",
                "${workspaceFolder}/examples"
            ],
            "env": {
                // "DEBUG_BREAK": "true"
            }
        },
        {
            "name": "Attach to Language Server",
            "type": "node",
            "port": 6009,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/bbj-vscode/out/**/*.js",
                "${workspaceFolder}/bbj-vscode/node_modules/langium"
            ]
        },
        {
            "type": "java",
            "name": "Run Interop Service",
            "request": "launch",
            "projectName": "java-interop",
            "mainClass": "bbj.interop.SocketServiceApp"
        },
        {
            "name": "Vitest: Run All",
            "type": "node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "program": "${workspaceRoot}/bbj-vscode/node_modules/vitest/vitest.mjs",
            "args": ["run", "--no-color", "--no-coverage", "--no-watch"],
            "smartStep": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/bbj-vscode"
        },
    ]
}
