{
  "name": "bbj",
  "scopeName": "source.bbj",
  "fileTypes": [
    ".bbj",
    ".bbl"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.bbj",
      "match": "\\b([aA][nN][dD]|[cC][lL][aA][sS][sS]|[cC][lL][aA][sS][sS][eE][nN][dD]|[dD][iI][mM]|[eE][lL][sS][eE]|[eE][nN][dD]|[eE][nN][dD][iI][fF]|[eE][xX][iI][tT][tT][oO]|[eE][xX][tT][eE][nN][dD][sS]|[fF][iI]|[fF][iI][eE][lL][dD]|[fF][oO][rR]|[gG][oO][sS][uU][bB]|[gG][oO][tT][oO]|[iI][fF]|[iI][mM][pP][lL][eE][mM][eE][nN][tT][sS]|[iI][nN][tT][eE][rR][fF][aA][cC][eE]|[iI][nN][tT][eE][rR][fF][aA][cC][eE][eE][nN][dD]|[lL][eE][tT]|[mM][eE][tT][hH][oO][dD]|[mM][eE][tT][hH][oO][dD][eE][nN][dD]|[mM][eE][tT][hH][oO][dD][rR][eE][tT]|[nN][eE][xX][tT]|[oO][rR]|[pP][rR][iI][nN][tT]|[pP][rR][iI][vV][aA][tT][eE]|[pP][rR][oO][tT][eE][cC][tT][eE][dD]|[pP][uU][bB][lL][iI][cC]|[rR][eE][tT][uU][rR][nN]|[sS][tT][aA][tT][iI][cC]|[sS][tT][eE][pP]|[tT][hH][eE][nN]|[tT][oO]|[wW][eE][nN][dD]|[wW][hH][iI][lL][eE]|[dD][eE][cC][lL][aA][rR][eE]|[lL][iI][bB][rR][aA][rR][yY]|[nN][eE][wW]|[uU][sS][eE])\\b"
    },
    {
      "name": "string.quoted.double.bbj",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "[rR][eE][mM][ \\t]",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.bbj"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.bbj"
        },
        {
          "name": "comment.block.bbj",
          "begin": "/@@",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.bbj"
            }
          },
          "end": "@/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.bbj"
            }
          }
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.bbj",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
