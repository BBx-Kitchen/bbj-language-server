{
  "name": "bbj",
  "scopeName": "source.bbj",
  "fileTypes": [
    ".bbj",
    ".bbl",
    ".bbjt"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.bbj",
      "match": "\\b([aA][dD][dD][rR]|[aA][nN][dD]|[bB][rR][eE][aA][kK]|[bB][yY][eE]|[cC][aA][sS][eE]|[cC][lL][aA][sS][sS]|[cC][lL][aA][sS][sS][eE][nN][dD]|[cC][lL][iI][pP][fF][rR][oO][mM][sS][tT][rR]|[cC][lL][oO][sS][eE]|[cC][oO][nN][tT][iI][nN][uU][eE]|[dD][eE][fF][aA][uU][lL][tT]|[dD][iI][mM]|[eE][lL][sS][eE]|[eE][nN][dD]|[eE][nN][dD][iI][fF]|[eE][rR][rR]|[eE][xX][iI][tT]|[eE][xX][iI][tT][tT][oO]|[eE][xX][tT][eE][nN][dD][sS]|[fF][iI]|[fF][iI][eE][lL][dD]|[fF][oO][rR]|[gG][oO][sS][uU][bB]|[gG][oO][tT][oO]|[iI][fF]|[iI][mM][pP][lL][eE][mM][eE][nN][tT][sS]|[iI][nN][tT][eE][rR][fF][aA][cC][eE]|[iI][nN][tT][eE][rR][fF][aA][cC][eE][eE][nN][dD]|[lL][eE][tT]|[mM][eE][tT][hH][oO][dD]|[mM][eE][tT][hH][oO][dD][eE][nN][dD]|[mM][eE][tT][hH][oO][dD][rR][eE][tT]|[mM][lL][tT][hH][eE][nN]|[mM][oO][dD][eE]|[nN][eE][xX][tT]|[oO][pP][eE][nN]|[oO][rR]|[pP][rR][iI][nN][tT]|[pP][rR][iI][vV][aA][tT][eE]|[pP][rR][oO][cC][eE][sS][sS][__][eE][vV][eE][nN][tT][sS]|[pP][rR][oO][tT][eE][cC][tT][eE][dD]|[pP][uU][bB][lL][iI][cC]|[rR][eE][aA][dD]|[rR][eE][cC][oO][rR][dD]|[rR][eE][lL][eE][aA][sS][eE]|[rR][eE][tT][uU][rR][nN]|[sS][eE][tT][eE][rR][rR]|[sS][lL][tT][hH][eE][nN]|[sS][qQ][lL][cC][lL][oO][sS][eE]|[sS][qQ][lL][eE][xX][eE][cC]|[sS][qQ][lL][oO][pP][eE][nN]|[sS][qQ][lL][pP][rR][eE][pP]|[sS][tT][aA][tT][iI][cC]|[sS][tT][eE][pP]|[sS][wW][eE][nN][dD]|[sS][wW][iI][tT][cC][hH]|[tT][hH][rR][oO][wW]|[tT][oO]|[wW][aA][iI][tT]|[wW][eE][nN][dD]|[wW][hH][iI][lL][eE]|[wW][rR][iI][tT][eE]|[aA][uU][tT][oO]|[dD][eE][cC][lL][aA][rR][eE]|[lL][iI][bB][rR][aA][rR][yY]|[nN][eE][wW]|[uU][sS][eE])\\b"
    },
    {
      "name": "string.quoted.double.bbj",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.bbj",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "[rR][eE][mM][ \\t]",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.bbj"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.bbj"
        },
        {
          "name": "comment.block.bbj",
          "begin": "/@@",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.bbj"
            }
          },
          "end": "@/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.bbj"
            }
          }
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.bbj",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
